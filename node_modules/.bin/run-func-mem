#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  --max-old-space-size=4096 "$basedir/../run-func/mem.js" "$@"
  ret=$?
else 
  node  --max-old-space-size=4096 "$basedir/../run-func/mem.js" "$@"
  ret=$?
fi
exit $ret
